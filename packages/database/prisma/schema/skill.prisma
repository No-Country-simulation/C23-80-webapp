model SkillCategory {
    id            String  @id @default(uuid())
    title         String
    handle        String
    featuredImage Json?
    description   String?
    seo           Json

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    skills Skill[]
}

model Skill {
    id              String  @id @default(uuid())
    title           String
    handle          String
    description     String?
    featuredImage   Json
    visibilityCount Int     @default(0)
    url             String
    seo             Json

    category    SkillCategory     @relation(fields: [categoryId], references: [id])
    categoryId  String
    collections SkillCollection[]
}

model SkillCollection {
    id            String  @id @default(uuid())
    title         String
    handle        String
    description   String?
    featuredImage Json
    seo           Json

    skills Skill[]
}
